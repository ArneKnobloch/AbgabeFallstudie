<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
    xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.gwt-Popup{
			background-color: white;
		}
		.label {
			font-size: 14px;
			margin-bottom: 10px;
			margin-left: 10px;
			width: 220px;
			}
		.button {
			font-weight: bold;
			margin-left: 20px;
			margin-bottom: 20px;
			width: 300px;
			height: 30px;
			color: red;
		}
		.heading{
  			font-size: 2em;
  			font-weight: bold;
  			color: #777777;
  			margin-top: 40px;
  			margin-left: 10px;
  			margin-bottom: 20px;
		}
		.currentValue{
			width: 40px;
			margin-left: 14px;
		}
		.vPanel{
			float: left;
			width: 400px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Label styleName="{style.heading}">Spieleinstellungen </g:Label>
		<div styleName="body">
			<g:VerticalPanel styleName="{style.vPanel}">
				<g:Button styleName="{style.button}" ui:field="bSave" />
			</g:VerticalPanel>
			<div class="options"></div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 