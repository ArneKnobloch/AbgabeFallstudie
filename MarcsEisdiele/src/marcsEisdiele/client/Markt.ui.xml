<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
    xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.gwt-Popup{
			background-color: white;
		}
		.label {
			font-size: 14px;
			margin-bottom: 10px;
			margin-left: 10px;
			width: 220px;
			}
		.button {
			font-weight: bold;
			margin-left: 20px;
			margin-bottom: 20px;
			width: 300px;
			height: 30px;
			color: red;
		}
		.heading{
  			font-size: 2em;
  			font-weight: bold;
  			color: #777777;
  			margin-top: 40px;
  			margin-left: 10px;
  			margin-bottom: 20px;
		}
		.currentValue{
			width: 40px;
			margin-left: 14px;
		}
		.vPanel{
			float: left;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Label styleName="{style.heading}">Markt definieren </g:Label>
		<div styleName="body">
		
		
		<g:VerticalPanel styleName="style.vPanel">
			<g:Button styleName="{style.button}" ui:field="bPersonal" />
			<g:Button styleName="{style.button}" ui:field="bResearch" />
			<g:Button styleName="{style.button}" ui:field="bMarketing" />
			<g:Button styleName="{style.button}" ui:field="bMaschine" />
			<g:HorizontalPanel>
	    		<g:Label styleName="{style.label}"> Auslastung der Maschinen </g:Label>
				<gxt:Slider ui:field="sWorkload"/>
				<g:TextBox styleName="{style.currentValue}" ui:field="currentWorkload"/>	
	    	</g:HorizontalPanel>
 			<g:HorizontalPanel>	    		 
	    		<g:Label styleName="{style.label}"> Preis des Produkts: </g:Label>
	    		<gxt:Slider ui:field="sPrice"/>
	    		<g:TextBox styleName="{style.currentValue}" ui:field="currentPrice"/>	
	    	</g:HorizontalPanel>
	    	<g:HorizontalPanel>	    		 
				<g:Button styleName="{style.button}" ui:field="bCompetitor" />
				<g:Button styleName="{style.button}" ui:field="bStart" />
	    	</g:HorizontalPanel>
 		</g:VerticalPanel>
 		
 		</div>
	</g:HTMLPanel>
</ui:UiBinder> 